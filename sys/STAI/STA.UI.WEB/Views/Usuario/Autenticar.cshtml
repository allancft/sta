@model STA.MODEL.UsuarioModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../../Content/bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="../../Content/bootstrap/css/signin.css" rel="stylesheet" type="text/css">
    <style type="text/css" media="screen"></style>
    <style type="text/css" media="all"></style>
    <style type="text/css" media="print"></style>
    <script src="/Content/scripts/jquery.js" type="text/javascript"></script>
    <script src="../../Content/bootstrap/js/ie/ie8-responsive-file-warning.js" type="text/javascript"></script>
    <script src="../../Content/bootstrap/js/ie/html5shiv.js" type="text/javascript"></script>
    <script src="../../Content/bootstrap/js/ie/respond.min.js" type="text/javascript"></script>
</head>
@{
    ViewBag.Title = "Autenticação Itambé";
}
<body>
    <div class="container">
        
        <form action="/Usuario/Autenticar" class="form-signin" method="post">
            <img src="../../Content/images/logo-itambe.png" alt="Logo marca Itambé" class="img-thumbnail">
            <center><h3 class="form-signin-heading">
                        STAI</h3></center>
            @Html.LabelFor(m => m.Login)
            @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Login)
            @Html.LabelFor(m => m.Senha)
            @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Senha)
            <input type="submit" value="Entrar" class="btn btn-lg btn-primary btn-block" />
        </form>
    </div>
    <div class="fixed-footer-mensagem">
        @Html.Partial("~/Views/Shared/_Mensagens.cshtml")
    </div>
</body>
</html>
